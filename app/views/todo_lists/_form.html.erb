<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
      <% @todo_list.errors.full_messages.each do |error| %>
        <div class='text-danger'> <%= error %> </div>
      <% end %>

      <%= form_with(model: @todo_list, class: 'shadow p-3 mb-3 bg-primary rounded', local: true) do |form| %>
        <div class='form-group row mb-3'>
          <%= form.label :name, class: 'col-2 col-form-label text-light' %>
          <div class='col-10'>
            <%= form.text_field :name, class: 'form-control shadow rounded', placeholder: 'To Do List Name' %>
          </div>
        </div>

        <div class='form-group row mt-2 justify-content-center'>
          <%= form.submit class: 'btn btn-outline-light col-4 mx-2' %>

          <%= link_to 'Cancel', @todo_list.id.nil? ? todo_lists_path : todo_list_path(@todo_list), class: 'btn btn-danger col-4 mx-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
