<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
      <% @item.errors.full_messages.each do |error| %>
        <div> <%= error %> </div>
      <% end %>

      <%= form_for [@todo_list, @item], html: { class: 'shadow p-3 mb-3 bg-primary rounded' }, local: true do |form| %>
        <div class='form-group row mb-3'>
          <%= form.label :name, class: 'col-2 col-form-label text-light' %>
          <div class='col-10'>
            <%= form.text_field :name, class: 'form-control shadow rounded', placeholder: 'Item Name' %>
          </div>
        </div>

        <div class='form-group row mb-3'>
          <%= form.label :description, class: 'col-2 col-form-label text-light' %>
          <div class='col-10'>
            <%= form.text_area :description, class: 'form-control shadow rounded', placeholder: 'Item Description' %>
          </div>
        </div>

        <div class='form-group row mt-2 justify-content-center'>
          <%= form.submit class: 'btn btn-outline-light col-4 mx-2' %>
          <%= link_to 'Cancel', @item.id.nil? ? todo_list_items_path(@todo_list) : todo_list_item_path(@todo_list, @item), class: 'btn btn-danger col-4 mx-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
