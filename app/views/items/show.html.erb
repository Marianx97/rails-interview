<h2> To Do List Item Details </h2>

<h3> #<%= @item.id %> | <%= @item.name %> </h3>
<p> Description: <%= @item.description %> </p>

<div>
  <%= link_to 'Edit Item', edit_todo_list_item_path %>
  <%= link_to 'Delete Item', todo_list_item_path(@item),
    data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure you want to delete the resource?'
    } %>
</div>
<div> <%= link_to 'Back to List', todo_list_path(@todo_list) %> </div>
