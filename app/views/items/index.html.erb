<h2> <%= @todo_list.name %> </h2>

<% if @todo_list.items.count > 0 %>
  <div>
    <% @todo_list.items.each do |item| %>
      <div>
        #<%= item.id %> | <%= link_to item.name, todo_list_item_path(@todo_list, item) %>
      </div>
    <% end %>
  </div>
<% else %>
  <p> This list is empty </p>
<% end %>

<div> <%= link_to 'Add Item to List', new_todo_list_item_path(@todo_list) %> </div>

<div> <%= link_to 'Back to List Details', todo_list_path(@todo_list) %> </div>
